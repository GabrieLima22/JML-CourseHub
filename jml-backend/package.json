{
  "name": "jml-coursehub-backend",
  "version": "1.0.0",
  "description": "Backend para JML CourseHub com processamento de PDFs e IA",
  "main": "src/app.js",
  "scripts": {
    "dev": "nodemon src/app.js",
    "start": "node src/app.js",
    "build": "echo 'No build step needed for Node.js'",
    
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "node prisma/seed.js",
    "db:reset": "prisma migrate reset --force",
    
    "test": "echo 'Testes ainda não configurados'",
    "lint": "echo 'ESLint ainda não configurado'",
    
    "setup": "npm install && npx prisma generate && npx prisma db push",
    "fresh": "npm run db:reset && npm run db:seed"
  },
  "keywords": [
    "jml",
    "cursos",
    "pdf-processing",
    "ai",
    "search",
    "nodejs",
    "express",
    "prisma"
  ],
  "author": "JML Cursos",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1",
    "openai": "^4.20.1",
    "@prisma/client": "^5.6.0",
    "prisma": "^5.6.0",
    "zod": "^3.22.4",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1",
    "slugify": "^1.6.6",
    "sharp": "^0.33.0",
    "mime-types": "^2.1.35"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "nodemonConfig": {
    "watch": ["src/", "prisma/"],
    "ext": "js,json,prisma",
    "ignore": ["node_modules/", "uploads/", "*.log"],
    "exec": "node src/app.js"
  }
}
